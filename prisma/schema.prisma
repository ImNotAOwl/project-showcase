generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ProjectStatus {
  idea
  in_progress
  done
}

model Project {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  status      ProjectStatus @default(idea)
  tags        String[]
  repoUrl     String?
  githubLinks String[]
  siteUrl     String?
  imageUrl    String?
  screenshots String[]
  section     String        @default("Exp√©riences Professionnelles")
  sortOrder   Int           @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}
